
<%- include('../partials/head')%>

<body>
    <%- include('../partials/header')%>

<main>
    <div class="container">
        <section class="form-register">
            <h3>Formulario de registro</h3>
              
                <form action="/users" method="POST" enctype="multipart/form-data">
                    <!-- first_name -->
                    <label for="first_name">Nombre :</label>
                    <input class="controls" type="text" name="first_name" id="nombres" placeholder="Nombre" value="<%= locals.old && old.first_name ? old.first_name:'' %>">
                    <% if (locals.errors && errors.first_name) { %>
                        <div class="alert alert-danger" role="alert"">
                            <%=  errors.first_name.msg %> 
                        </div>
                    <% } %>
                   
                    <!-- last_name -->
                    <label for="last_name">Apellido :</label>
                    <input class="controls" type="text" name="last_name" id="apellido" placeholder="Apellido"  value="<%= locals.old && old.last_name ? old.last_name  : '' %>">
                    <% if (locals.errors && errors.last_name) { %>
                        <div class="alert alert-danger" role="alert"">
                            <%=  errors.last_name.msg %> 
                        </div>
                    <% } %>
    
                    <!-- email -->
                    <label for="email">Email :</label>
                    <input class="controls" type="email" name="email" id="email" placeholder="Correo electrónico" value="<%= locals.old && old.email ? old.email : '' %>">
                    <% if (locals.errors && errors.email) { %>
                        <div class="alert alert-danger" role="alert"">
                            <%= errors.email.msg %> 
                        </div>
                    <% } %>    
    
                    <!-- password -->
                    <label for="password">Contraseña :</label>
                    <input class="controls" type="password" name="password" id="password" placeholder="Ingrese una contraseña">
    
                    <% if (locals.errors && errors.password) { %>
                        <div class="alert alert-danger" role="alert"">
                            <%= errors.password.msg %> 
                        </div>
                    <% } %>
    
                    <!-- password2 -->
                    <label for="confirmPassword">Confirme Contraseña :</label>
                    <input class="controls" type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirme su contraseña">
                    <% if (locals.errors && errors.confirmPassword) { %>
                        <div class="alert alert-danger" role="alert"">
                           <%= errors.confirmPassword.msg  %> 
                        </div>
                    <% } %>
    
                    <!-- images -->
                   <!--  <div class="product-img"> -->
                        <label for="category" class="form-label">Inserte una imagen:</label>
                        <input type="file" name="image" id="image">
                 <!--    </div> -->
                   </br>
                   </br>
                  
                     <!-- terminos -->
                    <!--  <div class="check">  
                        <input  type="checkbox" name="tratamientoDatos">
                        <label for="tratamientoDatos">Acetos los terminos y condiciones</label>
                    </div> -->
                    <!-- submit -->
                    <button class="boton" type="submit" class="registrarme">Registrarme</button>
                </form>
            <p><a class="login" href='./login'> Ya tengo una cuenta</a></p>
        </section>
    </div>
</main>
<%- include('../partials/footer')%>
</body>
</html>


