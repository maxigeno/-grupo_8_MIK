  <main>
    <!-- DESTACADOS -->
    <div class="destacado_container">
      <img
        src="/static/img/destacados.png"
        alt="imagen_promocion"
        class="img_promocion"
      />
    </div>

    <section class="cards">
      <% inSale.forEach( product => { %>
      <article class="card">
        <div class="card__container-img">
          <img
            class="card__img"
            src="/static/img/<%= product.imagen%>"
            alt="Imagen Deportiva"
          />
        </div>
        <div class="card__container-info">
          <p class="card__label-offer">
            <%=product.porcentaje_descuento%>% OFF
          </p>
          <h4 class="card__name"><%= product.nombre %></h4>
          <div class="card__price-offer">
            <p class="card__price offer">$<%= product.precio %></p>

            <p class="card__price color-offer">
              $ <%=calculateDiscount(product.precio,product.porcentaje_descuento
              ) %>
            </p>
          </div>
          <a class="card__btn" href="/products/<%=product.id%>"
            >Ver mas <i class="fa-solid fa-arrow-right"></i
          ></a>
        </div>
      </article>
      <% }) %>
    </section>

    <!-- LO NUEVO -->
    <div class="destacado_container">
      <img
        src="/static/img/lo_nuevo.png"
        alt="imagen_promocion"
        class="img_promocion"
      />
    </div>

    <section class="cards">
      <% newCourses.forEach( product => { %>
      <article class="card">
        <div class="card__container-img">
          <img
            class="card__img"
            src="/static/img/<%=product.imagen%>"
            alt="Imagen Deportiva"
          />
        </div>
        <div class="card__container-info">
          <p class="card__label-new">Nuevo</p>
          <h4 class="card__name"><%= product.nombre %></h4>
          <p class="card__price">$ <%= product.precio %></p>
          <a class="card__btn" href="/products/<%=product.id%>"
            >Ver mas <i class="fa-solid fa-arrow-right"></i
          ></a>
        </div>
      </article>
      <% }) %>
    </section>
  </main>
